class Solution
{
    public:
    void sort012(int a[], int n)
    {
        int l=0;
        int m=0;
        int h=n-1;
        
        
        while(m<=h)
        {
            int x=a[m];
            
            if(x==0)
            {
                swap(a[l],a[m]);
                l++;
                m++;
            }
            else if(x==1)
            {
                m++;
            }
            else
            {
                swap(a[h],a[m]);
                h--;
            }
        }
    }
    
};
